<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- add servlet -->
    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>app.servlets.AddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <!-- list servlet -->
    <servlet>
        <servlet-name>list</servlet-name>
        <servlet-class>app.servlets.ListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>list</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet>

        <servlet-name>info</servlet-name>
        <servlet-class>app.servlets.TransactionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>info</servlet-name>
        <url-pattern>/info</url-pattern>
    </servlet-mapping>
    <servlet>
    <servlet-name>transaction</servlet-name>
    <servlet-class>app.servlets.InfoServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>transaction</servlet-name>
<url-pattern>/transaction</url-pattern>
</servlet-mapping>

    <servlet>
        <servlet-name>discount</servlet-name>
        <servlet-class>app.servlets.DiscountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>discount</servlet-name>
        <url-pattern>/discount</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>search</servlet-name>
        <servlet-class>app.servlets.SearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>result</servlet-name>
        <servlet-class>app.servlets.Result</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>result</servlet-name>
        <url-pattern>/result</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>bid</servlet-name>
        <servlet-class>app.servlets.bidServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bid</servlet-name>
        <url-pattern>/bid</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>bidResult</servlet-name>
        <servlet-class>app.servlets.bidResult</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bidResult</servlet-name>
        <url-pattern>/bidResult</url-pattern>
    </servlet-mapping>











</web-app>